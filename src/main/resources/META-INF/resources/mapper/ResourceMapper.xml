<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sochina.demo.mapper.ResourceMapper">

    <resultMap type="com.sochina.demo.domain.Resource" id="ResourceResult">
        <id property="resourceId" column="resource_id"/>
        <result property="resourceName" column="resource_name"/>
        <result property="appId" column="app_id"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="perms" column="perms"/>
        <result property="frame" column="frame"/>
        <result property="cache" column="cache"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="orderNum" column="order_num"/>
        <result property="state" column="state"/>
        <result property="deleteFlag" column="delete_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="isExist" resultType="int">
        select exists(
        select resource_id from sochina_resource
        <where>
            <if test="resourceName != null and resourceName != ''">
                and resource_name = #{resourceName}
            </if>
            <if test="resourceId != null and resourceId != ''">
                and resource_id = #{resourceId}
            </if>
        </where>
        )
    </select>

    <select id="getTree" resultType="com.sochina.demo.domain.ResourceVo">
        select
            resource_id as id,
            resource_name as label,
            menu_type as type
        from sochina_resource
        <where>
            delete_flag = '0' and state = '0'
            <if test="appId != null and appId != ''">
                and app_id = #{appId}
            </if>
            <if test="menuType == '3'">
                and menu_type in ('M','C')
            </if>
            <if test="menuType != '3'">
                and menu_type = 'M'
            </if>
        </where>
        order by order_num
    </select>

    <update id="changeState">
        update sochina_resource set state = #{state} where resource_id = #{resourceId}
    </update>

    <update id="removeBatchById" parameterType="list">
        <foreach collection="list" separator=";" item="item">
            update sochina_resource set delete_flag = "1" where resource_id = #{item}
        </foreach>
    </update>
</mapper> 