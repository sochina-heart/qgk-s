<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sochina.demo.mapper.SochinaUserMapper">

    <resultMap type="com.sochina.demo.domain.SochinaUser" id="SochinaUserResult">
        <id column="userId" property="user_id"/>
        <result column="account" property="account"/>
        <result column="userName" property="user_name"/>
        <result column="userPassword" property="user_password"/>
        <result column="sex" property="sex"/>
        <result column="userEmail" property="user_email"/>
        <result column="homeAddress" property="home_address"/>
        <result column="personalDescription" property="personal_description"/>
        <result column="state" property="state"/>
        <result column="deleteFlag" property="delete_flag"/>
        <result column="createBy" property="create_by"/>
        <result column="createTime" property="create_time"/>
        <result column="updateBy" property="update_by"/>
        <result column="updateTime" property="update_time"/>
    </resultMap>

    <select id="isExist" resultType="int">
        select exists(
        select user_id from sochina_user
        <where>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
        </where>
        )
    </select>
</mapper> 